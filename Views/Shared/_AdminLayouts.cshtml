<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductDashboard.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <title> Dashboard </title>
    <style>
      html, body {
  height: 100%;
  margin: 0;
}
    </style>
</head>
<body dir="rtl">
    <header class="navbar navbar-expand-lg navbar-dark px-3">
         <a class="navbar-brand text-center" href="#">لوحة التحكم </a>    
    </header> 

   <main>
  <div class="row min-vh-100">
    <div class="col-md-10 col-sm-8">
      @RenderBody()
    </div> 
    <div class="col-md-2 col-sm-2 bg-dark text-white text-end">
      <div class="row">
        <div class="bg-secondary">
          <h4>Dashboard </h4>
        </div>
        <hr class="text-muted" />
        <ul class="nav nav-pills flex-column mb-auto">
           <li class="nav-item">
                    <a asp-asp-controller="Dashboard" asp-action="Booking" class="nav-link text-white">
                    الحجوزات <i class="bi bi-house-door"></i>  
                    </a>
                </li>
            <li class="nav-item"></li>
                    <a asp-controller="Dashboard" asp-action="TripType" class="nav-link text-white">
                   انواع الإنشطة السياحية   <i class="bi bi-diagram-2"></i>  
                    </a>

                       <li class="nav-item"></li>
                    <a asp-controller="Dashboard" asp-action="TripProvider" class="nav-link text-white">
                   مقدم الرحلات السياحية   <i class="bi bi-diagram-2"></i>  
                    </a>

           <li class="nav-item"></li>
                    <a asp-controller="Dashboard" asp-action="Trip" class="nav-link text-white">
                   الرحلات   <i class="bi bi-diagram-2"></i>  
                    </a>

        
           
        </ul>
      </div>
    </div> 
  </div>
</main>


   <footer class="text-center py-3 mt-auto">
    &copy; 2025 جميع الحقوق محفوظة
</footer>
     <script type="importmap"></script>

     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
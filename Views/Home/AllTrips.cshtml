@model List<Trip>

  

 
<div class="container">
  
  <div class="row mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-row-reverse">
</div>
    @foreach (var item in Model)
    {
        <div class="col-md-4 pb-1 pb-md-0">
            
            <div class="card custom-card">
                <img class="card-img-top" src="/Images/@item.Image" alt="Card image cap">
                <div class="card-body">
   
  <ul class="list-inline text-end p-1 mb-0" dir="rtl">
    <li class="list-inline-item custom-list-item"><span>@item.Location</span></li>
    <li class="list-inline-item custom-list-item me-2"><span>@item.TripType?.Name</span></li>
  </ul>

              <p class="card-title">@item.Name</p>
             <p class="card-text truncate-2-lines">@item.Description</p>
       <form method="post" asp-controller="Home" asp-action="Booking">
    <input type="hidden" name="id" value="@item.Id" />
    <div class="text-center mt-2">
        <button type="submit" class="login-button">احجز الان</button>
    </div>
</form>

         </div>
            
            </div>
        </div>
        
    }
  </div>
  
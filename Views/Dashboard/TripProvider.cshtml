@model List<TripProvider>
@{
    Layout="~/Views/Shared/_AdminLayouts.cshtml";
}

<div class="container" dir="rtl">
    <div class="row mt-5">
        <div class="col">
            <div class="card">
                <div class="card-header text-white" style="background-color: rgb(151, 92, 135);">
                    <h4>   مقدم الرحلة </h4>
                </div>

                <div class="card-body">
                 <form asp-action="AddProvider" asp-controller="Dashboard" method="post">
                  <div class="row">
                    <div class="col">
                         <label class="form-label">مقدم الرحلة</label>
                         <input type="text" class="form-control" name="Name" required>
                    </div>
                  </div>

                  <div class="row mt-3">
                      <div class="col text-center">
                        <button class="btn btn-info" type="submit">حفظ البيانات</button>
                      </div>
                  </div>
                 </form>
                </div>
            </div>
        </div>
    </div>

    <hr class="text-muted"/>

    <div class="row mt-5">
        <div class="col ">
            <div class="card">
                <div class="card-header text-white" style="background-color: rgb(151, 92, 135);">
                    <h4> مقدمو الرحلات </h4>
                </div>
                <div class="card-body">
                    <table class="table">
                      <thead>
                          <tr class="text-center">
                            <th> #</th>
                            <th>مقدم الرحلة</th>
                            <th colspan="2">إجـــراء</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach(var item in Model)
                        {
                            <tr class="text-center">
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                  <a asp-action="DeleteProvider" asp-route-id="@item.Id" onclick="return confirm('هل أنت متأكد من الحذف؟')">
                                    <i class="bi bi-trash-fill text-danger"></i>
                                  </a>
                                </td>
                                <td>
                                  <a asp-action="EditProvider" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-fill text-success"></i>
                                  </a>
                                </td>
                            </tr>
                        }
                      </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
